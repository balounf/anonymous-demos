  "elements" : [ {
      "id" : "f0",
      "type" : "HtmlDialogStart",
      "name" : "start(String)",
      "config" : {
        "signature" : "start",
        "input" : {
          "params" : [
            { "name" : "personId", "type" : "String", "desc" : "" }
          ],
          "map" : {
            "out.personId" : "param.personId"
          },
          "code" : [
            "import org.apache.commons.lang3.StringUtils;",
            "out.person = ivy.repo.find(param.personId, com.axonivy.demo.anonymous.core.Person.class) as com.axonivy.demo.anonymous.core.Person;",
            "out.missingSsn = StringUtils.isBlank(out.person.ssn);"
          ]
        },
        "guid" : "19C23BB61CAF4E08"
      },
      "visual" : {
        "at" : { "x" : 96, "y" : 64 }
      },
