      "type" : "EMail",
      "name" : "Send SSN request email",
      "config" : {
        "headers" : {
          "subject" : "<%=ivy.cms.co(\"/Emails/requestDataSubject\")%>",
          "to" : "<%=in.person.email%>"
        },
        "message" : {
          "body" : "<%=ivy.cms.co(\"/Emails/requestDataContent\", [in.emailSubmittMissingDataLink])%>",
          "contentType" : "text/html"
        }
      },
      "visual" : {
        "at" : { "x" : 449, "y" : 145 }
      },
      "connect" : [
        { "id" : "f10", "to" : "f3", "color" : "default" }
      ]
    }, {
      "id" : "f11",
      "type" : "Script",
      "name" : "Generate token for SSN request",
      "config" : {
        "output" : {
          "code" : [
            "import com.axonivy.demo.anonymous.core.Service;",
            "import java.util.UUID;",
            "import com.axonivy.demo.anonymous.core.Token;",
            "",
            "Token token = new Token();",
            "token.personId = in.personId;",
            "token.token = UUID.randomUUID().toString();",
            "token.type = \"requestSsn\";",
            "token.valid = true;",
            "ivy.repo.save(token);",
            "",
            "in.emailSubmittMissingDataLink = Service.get().appRelativeLink(\"anonymous-demos-open/19C23640F9AD30D8/submitMissingData.ivp?token=%s\".formatted(token.token));"
          ]
        },
        "sudo" : true
      },
